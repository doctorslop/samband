# Samband API Configuration
# Copy to .env and fill in values

# API Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secret-api-key-here

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://sambandscentralen.se,https://www.sambandscentralen.se

# Database paths
DATABASE_PATH=./data/events.db
BACKUP_PATH=./data/backups

# Police API
POLICE_API_URL=https://polisen.se/api/events
POLICE_API_TIMEOUT=30

# Scheduling
FETCH_INTERVAL_MINUTES=5
BACKUP_INTERVAL_HOURS=24
CLEANUP_INTERVAL_HOURS=24

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Environment (development/production)
# In development mode, /docs and /redoc are enabled
ENVIRONMENT=production
