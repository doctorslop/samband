# Disable directory listing
Options -Indexes

# Deny access to hidden files (except .htaccess itself)
<FilesMatch "^\.(?!htaccess)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to sensitive file types
<FilesMatch "\.(sql|log|bak|old|tmp|swp|env|ini|conf)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to data directory (belt and suspenders with data/.htaccess)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^data/.*\.(db|db-wal|db-shm|lock|sqlite)$ - [F,L]
</IfModule>

# Security headers (fallback if PHP headers fail)
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
